generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id            Int      @id @default(autoincrement())
  url           String   @unique
  handle        String
  store_domain  String
  title         String?
  image_url     String?
  original_price Int?
  current_price  Int?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("items")
}

model Settings {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String

  @@map("settings")
}
